// The current implementation will take file path and file name separately.
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run fpocket",
            "type": "shell",
            "command": "docker",
            "args": [
                "run",
                "-v",
                "${input:mountfolder}:/workdir",
                "fpocket/fpocket",
                "fpocket",
                "-f",
                "/workdir/${input:filename}"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ],
    "inputs": [
        {
            "id": "mountfolder",
            "description": "Absolute path to containing folder (e.g. C:\\...\\cif)",
            "type": "promptString"
        },
        {
            "id": "filename",
            "description": "File name only (e.g. 5mut.cif)",
            "type": "promptString"
        }
    ]
}

